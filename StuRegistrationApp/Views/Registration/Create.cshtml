        @Html.LabelFor(model => model.subjectstream, "subjectstream", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (ViewBag.username != "Saman")
            {
                @Html.DropDownList("SubjectStream",
                            new SelectList(Enum.GetValues(typeof(StuRegistrationApp.Models.ScienceStream))),
                            "Select SubjectStream",
                            new { @class = "form-control" })
            }
            else
            {
                @Html.DropDownList("SubjectStream",
                           new SelectList(Enum.GetValues(typeof(StuRegistrationApp.Models.OtherStream))),
                           "Select SubjectStream",
                           new { @class = "form-control" })
            }
        </div> 

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
